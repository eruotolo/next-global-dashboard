{
    "compilerOptions": {
        "target": "ES2017",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@/app/*": ["./src/app/*"],
            "@/api/*": ["./src/app/api/*"],
            "@/components/*": ["./src/components/*"],
            "@/actions/*": ["./src/actions/*"],
            "@/dbprisma/*": ["./src/lib/db/*"],
            "@/tipos/*": ["./src/types/*"],
            "@/lib/*": ["./src/lib/*"],
            "@/store/*": ["./src/store/*"],
            "@/data/*": ["./src/data/*"],
            "@/hooks/*": ["./src/hooks/*"]
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "prisma/seed.js"],
    "exclude": ["node_modules"]
}
